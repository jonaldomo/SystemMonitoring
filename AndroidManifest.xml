<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.jonaldomo.SystemMonitoring"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".SystemMonitoring" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:name="com.google.ads.AdActivity" />
        <activity
            android:label="@string/telephony_title"
            android:name=".Telephony" />
        <activity
            android:label="@string/telephony_cdma_title"
            android:name=".TelephonyCdma" />
        <activity
            android:label="@string/telephony_gsm_title"
            android:name=".TelephonyGsm" />
        <activity
            android:label="@string/telephony_signal_strength_title"
            android:name=".TelephonySignalStrength" />
        <activity
            android:label="@string/display_title"
            android:name=".Display" />
        <activity
            android:label="@string/storage_title"
            android:name=".Storage" />
        <activity
            android:label="@string/memory_title"
            android:name=".Memory" />
        <activity
            android:label="@string/network_title"
            android:name=".Network" />
        <activity
            android:label="@string/os_title"
            android:name=".OperatingSystem" />
    </application>

</manifest>